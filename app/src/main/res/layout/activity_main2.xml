<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/second_screen_background01"
    tools:context=".MainActivity2">

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="71dp"
        android:ems="10"
        android:hint="@string/search_for_your_district"
        android:inputType="textPersonName"
        android:textColorHint="#0B0B0B"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="55dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#abcdef"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_search_24" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="231dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:textColor="#0B273E"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="82dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:textColor="#020202"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/actionButton"
        android:layout_width="62dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_share" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="48dp"
        android:layout_height="37dp"
        android:layout_marginTop="28dp"
        android:text="°C"
        android:textColor="#0B0A0A"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="161dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:textColor="#0B0A0A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="107dp"
        android:layout_height="73dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/linerLayout"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView2">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_max_24" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:text="Max: "
            android:textColor="#F8F5F5"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="93.55°C"
            android:textColor="#F8F5F5"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_min_24" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Min: "
            android:textColor="#F8F5F5"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="95.25°C"
            android:textColor="#F8F5F5"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linerLayout2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linerLayout">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_sunrise" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:text="Sun Rise: "
            android:textColor="#F8F5F5"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="6:44 AM"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_humadity" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Humidity: "
            android:textColor="#F8F5F5"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="6:44 AM"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linerLayout3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linerLayout2">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_sunset" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:text="Sun Set: "
            android:textColor="#F8F5F5"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="6:44 PM"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_compass" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Pressure: "
            android:textColor="#F8F5F5"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="6:44 AM"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linerLayout4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linerLayout3">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_wind" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:text="Wind Speed: "
            android:textColor="#F8F5F5"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="6:44 AM"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_cloud_queue_24" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Cloud: "
            android:textColor="#F8F5F5"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="6:44 AM"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="358dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#36454F"
        android:text="GET NEXT THREE DAY WEATHER FORECAST"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linerLayout4" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />


</androidx.constraintlayout.widget.ConstraintLayout>